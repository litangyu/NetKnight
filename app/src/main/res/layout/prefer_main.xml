<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/prefer_topPanel"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="#fff"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btn_pretopleft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@mipmap/unfold_more" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="防火墙"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#fff"
            android:textSize="26sp" />

        <Switch
            android:id="@+id/btn_preswitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:checked="false" />


    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:padding="20dp"
                android:id="@+id/prefer_text1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="防火墙生效网路"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <Spinner
                android:paddingLeft="20dp"
                android:id="@+id/spinner_wall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/prefer_text1"
                android:layout_centerHorizontal="true">

            </Spinner>
        </RelativeLayout>

        <RelativeLayout
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:padding="20dp"
                android:id="@+id/prefer_text2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="移动网络下默认权限"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <Spinner
                android:paddingLeft="20dp"
                android:id="@+id/spinner_net"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/prefer_text2"
                android:layout_centerHorizontal="true">

            </Spinner>
        </RelativeLayout>

        <RelativeLayout
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:padding="20dp"
                android:id="@+id/prefer_text3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="WIFI下默认权限"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <Spinner
                android:paddingLeft="20dp"
                android:id="@+id/spinner_wifi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/prefer_text3"
                android:layout_centerHorizontal="true">

            </Spinner>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>